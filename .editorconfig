root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_size = 3
max_line_length = 80

[*.rb]
max_line_length = 80

[*.pp]
max_line_length = 140

[*.py]
indent_size = 4
max_line_length = 88

[Makefile]
indent_style = tab
